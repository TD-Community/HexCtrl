{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/jovibor/HexCtrl/blob/master/docs/HexCtrl.Templates.Schema.json",
    "title": "HexCtrl Templates Schema",
    "$defs": {
        "Fields": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "size": {
                        "type": [
                            "integer",
                            "string"
                        ],
                        "minimum": 1
                    },
                    "clrBk": {
                        "type": "string",
                        "format": "color"
                    },
                    "clrText": {
                        "type": "string",
                        "format": "color"
                    },
                    "Fields": {
                        "$ref": "#/$defs/Fields"
                    }
                },
                "additionalProperties": false,
                "required": [
                    "name"
                ],
                "oneOf": [
                    {
                        "required": [
                            "size"
                        ]
                    },
                    {
                        "required": [
                            "Fields"
                        ]
                    }
                ]
            }
        }
    },
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "TemplateName": {
            "type": "string"
        },
        "clrBk": {
            "type": "string",
            "format": "color"
        },
        "clrText": {
            "type": "string",
            "format": "color"
        },
        "Fields": {
            "$ref": "#/$defs/Fields"
        }
    },
    "additionalProperties": false,
    "required": [
        "TemplateName",
        "Fields"
    ]
}
{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/jovibor/HexCtrl/master/docs/HexCtrl.Templates.Schema.json",
    "title": "HexCtrl Templates Schema",
    "$defs": {
        "Fields": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": [ "bool", "char", "unsigned char", "byte", "short", "unsigned short", "WORD", "long", "unsigned long",
                            "int", "unsigned int", "DWORD", "long long", "unsigned long long", "QWORD", "float", "double",
                            "time32_t", "time64_t", "FILETIME", "SYSTEMTIME", "GUID", "custom" ]
                    },
                    "size": {
                        "type": [ "integer", "string" ],
                        "minimum": 1
                    },
                    "endianness": {
                        "type": "string",
                        "enum": [ "little", "big" ]
                    },
                    "clrBk": {
                        "type": "string",
                        "format": "color"
                    },
                    "clrText": {
                        "type": "string",
                        "format": "color"
                    },
                    "Fields": {
                        "$ref": "#/$defs/Fields"
                    }
                },
                "additionalProperties": false,
                "required": [ "name" ],
                "oneOf": [ { "anyOf": [ { "required": [ "type" ] }, { "required": [ "size" ] } ] }, { "required": [ "Fields" ] } ]
            }
        }
    },
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "TemplateName": {
            "type": "string"
        },
        "endianness": {
            "type": "string",
            "enum": [ "little", "big" ]
        },
        "clrBk": {
            "type": "string",
            "format": "color"
        },
        "clrText": {
            "type": "string",
            "format": "color"
        },
        "Fields": {
            "$ref": "#/$defs/Fields"
        }
    },
    "additionalProperties": false,
    "required": [ "TemplateName", "Fields" ]
}
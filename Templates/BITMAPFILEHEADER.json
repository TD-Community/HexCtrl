{
    "$schema": "https://raw.githubusercontent.com/jovibor/HexCtrl/master/docs/HexCtrl.Templates.Schema.json",
    "TemplateName": "BITMAPFILEHEADER",
    "clrBkDefault": "#909090",
    "clrTextDefault": "#FFFFFF",
    "Fields": [
        {
            "name": "bfType",
            "size": 2
        },
        {
            "name": "bfSize",
            "size": 4
        },
        {
            "name": "bfReserved1",
            "size": 2
        },
        {
            "name": "bfReserved2",
            "size": 2
        },
        {
            "name": "bfOffBits",
            "size": 4
        },
        {
            "name": "BITMAPINFOHEADER",
            "clrBkDefault": "#C0C0C0",
            "clrTextDefault": "#FFFFFF",
            "Fields": [
                {
                    "name": "biSize",
                    "size": 4
                },
                {
                    "name": "biWidth",
                    "size": 4
                },
                {
                    "name": "biHeight",
                    "size": 4
                },
                {
                    "name": "biPlanes",
                    "size": 2
                },
                {
                    "name": "biBitCount",
                    "size": 2
                },
                {
                    "name": "biCompression",
                    "size": 4
                },
                {
                    "name": "biSizeImage",
                    "size": 4,
                    "clrBk": "#BB0000",
                    "clrText": "#FFFFFF"
                },
                {
                    "name": "biXPelsPerMeter",
                    "size": 4
                },
                {
                    "name": "biYPelsPerMeter",
                    "size": 4
                },
                {
                    "name": "biClrUsed",
                    "size": 4
                },
                {
                    "name": "biClrImportant",
                    "size": 4
                }
            ]
        }
    ]
}